<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="300"
  x:Class="Coffee.Views.CoffeeLogView">
  <DockPanel>
    <DockPanel DockPanel.Dock="Left">
        <Border Background="Red" DockPanel.Dock="Top"/>
        <Border Background="Blue" DockPanel.Dock="Bottom"/>
    </DockPanel>
    <DockPanel DockPanel.Dock="Right">
        <Border Background="Green" DockPanel.Dock="Top"/>
        <Border Background="Orange" DockPanel.Dock="Bottom"/>
    </DockPanel>
    <Grid>
      <Border Background="Gray" Width="300" Height="300"/>
    </Grid>
  </DockPanel>
</UserControl>
